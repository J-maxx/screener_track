<% form_for @contact, :url => { :action => "send_contact" }, :html => { :method => :post } do |f| %>
  <p><%= f.label "Name" %></p>
  <p><%= f.text_field :sender_name  %></p>
  <p><%= f.label "Email" %></p>
  <p><%= f.text_field :email %></p>
  <p><%= f.label "Type" %></p>
  <p><%= f.select :contact_type, options_for_select(["Question", "Problem", "Complement"]) %></p>
  <p><%= f.label "Details" %></p>
  <p><%= f.text_area :content %></p>
  <p> <%= f.submit "Submit" %></p>
<% end %>
